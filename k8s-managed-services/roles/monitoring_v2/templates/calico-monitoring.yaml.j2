apiVersion: v1
kind: Service
metadata:
  labels:
    app.kubernetes.io/component: calico-typha
    app.kubernetes.io/name: calico
    app.kubernetes.io/part-of: calico-cni-plugin
  name: calico-typha-monitoring
  namespace: kube-system
spec:
  ports:
  - port: 9091
    name: metrics
    protocol: TCP
    targetPort: 9091
  selector:
    app.kubernetes.io/component: calico-typha
    app.kubernetes.io/name: calico
    app.kubernetes.io/part-of: calico-cni-plugin

---

apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: calico-typha
  namespace: kube-system
spec:
  namespaceSelector:
    matchNames:
      - kube-system
  selector:
    matchLabels:
      app.kubernetes.io/component: calico-typha
      app.kubernetes.io/name: calico
      app.kubernetes.io/part-of: calico-cni-plugin
  endpoints:
    - port: metrics
      path: /metrics

