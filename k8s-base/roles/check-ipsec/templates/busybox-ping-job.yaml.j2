---
apiVersion: v1
kind: Pod
metadata:
  name: ipsec-test-busybox
  namespace: "{{ check_ipsec_namespace }}"
  labels:
    k8s-app: ipsec-test-busybox
spec:
  nodeSelector:
    kubernetes.io/os: linux
  containers:
  - name: ipsec-test-busybox
    image: busybox
    command:
    - sleep
    - infinity
    resources:
      requests:
        cpu: 100m
        memory: 200
