---
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: writer-test
  name: writer-test
  namespace: {{ check_local_storage_namespace | to_json }}
spec:
  securityContext:
    runAsNonRoot: true
    runAsUser: 24635
    runAsGroup: 24635
    fsGroup: 24635
  tolerations:
  - key: ""
    operator: Exists
  containers:
  - image: registry.gitlab.com/yaook/images/k8s-debian:main
    imagePullPolicy: IfNotPresent
    name: debian
    command: ["bash", "-c", "set -euo pipefail; cd /mnt; dd if=/dev/urandom of=noise bs=4k count=1k; sha256sum noise > SHA256SUMS"]
    volumeMounts:
      - mountPath: /mnt
        name: local-storage-test
  volumes:
  - name: local-storage-test
    persistentVolumeClaim:
      claimName: {{ check_local_storage_pvc_name | to_json }}
      readOnly: false
{% if test_worker_nodes|length > 0 %}
  nodeSelector:
    name: {{ test_worker_nodes[1].name | default(test_worker_nodes[0].name) }}
{% endif %}
  restartPolicy: Never
