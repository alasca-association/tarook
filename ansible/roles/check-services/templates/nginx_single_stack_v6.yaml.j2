apiVersion: v1
kind: Service
metadata:
  name: nginx-service-single-stack-v6
  namespace: {{ check_services_namespace | to_json }}
spec:
  selector:
    app: nginx-single-stack-v6
  ipFamilies:
  - IPv6
  ipFamilyPolicy: SingleStack
  ports:
    - protocol: TCP
      nodePort: 30060
      port: 80
      targetPort: 80
  type: NodePort

---
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: nginx-single-stack-v6
  name: nginx-single-stack-v6
  namespace: {{ check_services_namespace | to_json }}
spec:
  containers:
  - image: nginx
    name: nginx-single-stack-v6
    resources: {}
  dnsPolicy: ClusterFirst
  restartPolicy: Never
status: {}

