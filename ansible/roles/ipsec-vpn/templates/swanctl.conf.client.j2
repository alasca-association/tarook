connections {

    home {
        remote_addrs = {{ networking_floating_ip }}
        # Request an arbitrary virtual IP from the responder
        vips = 0.0.0.0
        local {
            auth = eap
            eap_id = ya
        }
        remote {
            auth = pubkey
            id = {{ networking_floating_ip }}
        }
        children {
            home {
                remote_ts = {{ ipsec_subnet }}
                esp_proposals = aes128gcm128-x25519
                start_action = trap
		dpd_action = restart
            }
        }
	dpd_delay = 10
        version = 2
        proposals = aes128-sha256-x25519
    }
}

secrets {

    eap-ya {
        id = ya
        secret = ooSh6xai
    }
}
